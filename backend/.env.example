# ============================================
# SPORTSFEED BACKEND - ENVIRONMENT VARIABLES
# ============================================

# Application Environment
NODE_ENV=development
PORT=3000

# ============================================
# SUPABASE CONFIGURATION (REQUIRED)
# ============================================
# Get these from your Supabase project settings at:
# https://app.supabase.com/project/YOUR_PROJECT/settings/api

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================
# CLOUDINARY CONFIGURATION (REQUIRED)
# ============================================
# For media upload functionality
# Get these from: https://cloudinary.com/console

CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================
# JWT CONFIGURATION (REQUIRED)
# ============================================
# Use a strong, random secret (minimum 32 characters in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

JWT_SECRET=your_jwt_secret_key_minimum_32_characters_for_production
JWT_EXPIRES_IN=7d

# ============================================
# CORS CONFIGURATION (RECOMMENDED)
# ============================================
# Comma-separated list of allowed origins
# Example: http://localhost:3000,http://localhost:5173,https://yourdomain.com

CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ============================================
# OPTIONAL CONFIGURATIONS
# ============================================

# Google OAuth (Optional)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# Redis Cache (Optional but recommended for production)
# REDIS_URL=redis://localhost:6379

# Email Service (Optional)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_email_app_password

# Security (Production)
# FORCE_HTTPS=true
# SESSION_SECRET=your_session_secret_here
